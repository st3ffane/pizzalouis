<div class="row">
   <p> {{#if error_msg}}{{error_msg}}{{/if}}</p>
<div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>{{title}}</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        {{#if product.id}}
                        <p>Mise à jour des informations sur un ingrédient</p>
                        {{else}}
                        <p>Ce formulaire vous permet de créer de nouveaux ingrédients pour vos recettes....</p>
                        {{/if}}

                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        

                        
                        <form role="form" method="POST" action="/admin/ingredients">
                            {{#if product.id}}<input type="hidden" name="id" value="{{product.id}}">{{/if}}

                            <div class="form-group">
                                <label>Nom de l'ingrédient</label>
                                <input class="form-control" name="title" required value="{{product.nom}}">
                                <p class="help-block">Example:tomate séchée, coppa...</p>
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" rows="3" name="description">{{product.description}}</textarea>
                                <p class="help-block">Une description rapide de l'ingrédient.</p>
                            </div>
                            <div class="form-group">
                                <label>Type d'ingrédient.</label>
                                <select class="form-control" name="type" value="{{product.type}}">
                                    <option value="top" selected>TOP</option>
                                    <option value="base">Base</option>                                    
                                </select>
                            </div>
                            <div class="form-group">
                                
                                <div class="checkbox">
                                    <label>
                                        <input name="dispo" type="checkbox" data-toggle="toggle" value="true" {{#ifEq product.dispo true}}checked="true"{{/ifEq}}>Disponnibilité
                                    </label>
                                </div>
                            </div>

                            
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-lg">Enregistrer</button>
                                <a href="/admin/ingredients" class="btn btn-default btn-lg">Retour</a>
                                {{#if product.id}}<a href="/admin/ingredients/delete/{{product.id}}" class="btn btn-danger btn-lg">Supprimer</a>{{/if}}
                            </div>
                        </form>
                    </div>
                    
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>