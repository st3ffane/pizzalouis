
<div class="row">
   &nbsp;
</div>
<div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            
                            
                            <table width="100%" class="table table-striped table-bordered table-hover" id="products">
                                <!-- /.table-responsive -->
                            <div class="well">
                                <h3>{{title}}</h3>
                                <p>{{slogan}}</p>
                                <p>Il y a actuellement <strong>{{count}}</strong> pizzas en base de données!</p>
                                <a type="button" href="{{edit_link}}" class="btn btn-success btn-lg btn-block addnew-btn">{{addnew_label}}</a>
                            </div>
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Base</th>
                                        <th>Ingredients</th>
                                        <th>Catégorie</th>
                                        <th>Prix small</th>
                                        <th>Prix Big</th>
                                        <th>Note</th>
                                        <th>Active</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each products}}
                                    <tr class="odd gradeX">
                                        <td><a href="/admin/pizzas/{{id}}" title="Cliquez pour editer cette recette">{{nom}}</a></td>
                                        <td>{{base}}</td>
                                        <td>{{#linearizeArray ingredients}}{{this}}{{/linearizeArray}}</td>
                                        <td>{{category}}</td>
                                        <td class="center">{{this.prix_small}}</td>
                                        <td class="center">{{prix_big}}</td>
                                        <td class="center">{{note}}</td>
                                        <td class="center"><label>
                                                    <input type="checkbox" data-toggle="toggle" {{#ifEq active true}}checked="true"{{/ifEq}}>
                                                </label></td>
                                    </tr>
                                    {{/each}}
                                    
                                </tbody>
                            </table>
                            
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
           
    </script>