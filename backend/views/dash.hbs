
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Dashboard</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <!-- qqs infos sur les données de l'application -->
            <div class="row">
                {{#each infos}}
                    {{> infos.block this}}
                {{/each}}
               
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel-body">
                            
                            
                            <table width="100%" class="table table-striped table-bordered table-hover" id="products">
                                <!-- /.table-responsive -->
                            <div class="well">
                                <h3>Les commandes du jour</h3>
                                <p>La liste se met automatiquement a jour dès qu'une nouvelle commande arrive!
                            </div>
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Base</th>
                                        <th>Ingredients</th>
                                        <th>Catégorie</th>
                                        <th>Prix small</th>
                                        <th>Prix Big</th>
                                        <th>Note</th>
                                        <th>Active</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each products}}
                                    <tr class="odd gradeX">
                                        <td><a href="/admin/pizzaedit/{{id}}" title="Cliquez pour editer cette recette">{{nom}}</a></td>
                                        <td>{{base}}</td>
                                        <td>{{#linearizeArray ingredients}}{{this}}{{/linearizeArray}}</td>
                                        <td>{{id_category}}</td>
                                        <td class="text-center">{{this.prix_small}}</td>
                                        <td class="text-center">{{prix_big}}</td>
                                        <td class="text-center">{{#formatNumber note }}{{this}}{{/formatNumber}}</td>
                                        <td class="center"><label >
                                                    <input  id="check-{{id}}" type="checkbox" onchange="activatepizza({{id}});" data-toggle="toggle" {{#ifEq active true}}checked="true"{{/ifEq}}>
                                                    <span id="text-{{id}}">{{#ifEq active true}}Active{{else}}Inactive{{/ifEq}}</span>
                                                </label></td>
                                    </tr>
                                    {{/each}}
                                    
                                </tbody>
                            </table>
                            
                        </div>
               <!-- graph de ventes -->
               <div class="panel panel-default">
                        <div class="panel-heading">
                           Heures de retrait
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            {{> ventes.graph this}}
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-lg-12">
                    
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           Géolocatisation des commandes
                        </div>
                        <div class="panel-body">
                            {{>geoloc this}}
                        </div>
                    </div>
                </div>
            </div>

            <script>
    $(document).ready(function() {
        $('table').each( (i,elem)=>{
                $(elem).DataTable({
                "filter": true,
                "pagingType": "simple_numbers",
                "orderClasses": false,
                "order": [[0, "asc"]],
                "info": false,
                responsive: true
            });
        });
    });
    </script>