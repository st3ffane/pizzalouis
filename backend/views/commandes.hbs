<div class="row">
    <div class="panel panel-default inner-panel">
    <table width="100%" class="table table-striped table-bordered table-hover" id="products">
                <!-- /.table-responsive -->
            <div class="well">
                <h3>Commandes</h3>
                <p>Liste des commandes (historique)</p>
                <p>Vous pouvez rechercher un client en particulier grace Ã  la zone de recherche sur la droite</p>
            </div>
                <thead>
                    <tr>
                        <th>Date commande</th>
                        <th>Date Retrait</th>
                        <th>Client</th>
                        <th>Id Paiement</th>
                        <th>Pizzas</th>
                        <th>Prix</th>
                        <th>message</th>
                    </tr>
                </thead>
                
            </table>
    </div>
</div>
<script>
       

        $(document).ready(function() {
            $('#products').DataTable( {
                "serverSide": true,
                "ajax": '/admin/commandes/api',
                "columns" : [
                    { "data": "date_cmd" },
                    { "data": "date_retrait" },
                    { "data": "client" },
                    { "data": "payement_id" },
                    { "data": "pizzas" },
                    { "data":"prix"},
                    { "data": "message" },
                ],
            "order": [[ 0, "desc" ]],
            columnDefs: [ 
            {
                targets: 0,
                render: function(from){
                    var d = new Date(from);
                    return d.toLocaleDateString();
                }
            },
            {
                targets: 1,
                render: function(from){
                    var dNow = new Date(from);
                    var min = dNow.getMinutes().toLocaleString(
                            'fr-FR', // use a string like 'en-US' to override browser locale
                            { minimumIntegerDigits: 2 }
                            );
                    var month = (dNow.getMonth()+1).toLocaleString(
                            'fr-FR', // use a string like 'en-US' to override browser locale
                            { minimumIntegerDigits: 2 }
                            );
                    return  dNow.getHours() + ':' + min+' '+dNow.getDate() + '/' +month + '/'+ dNow.getFullYear();
                }
            },
            {
                targets: 2,
                render: function(data, type, row, meta){
                    
                    ret="<a href='/admin/users/"+data.id+"' title='Voir les informations de ce client'>"+data.prenom+" "+data.nom+"</a>";
                    
                    return ret;
                },
                 bSortable: false
            },
            {
                targets: 3,
                render: function(data, type, row, meta){
                    
                    ret="<a href='/admin/payements/"+data+"' title='Voir les details du payement'>"+data+"</a>";
                    
                    return ret;
                },
                bSortable: false
            },
            {
                targets: 4,
                render: function(data, type, row, meta){
                    var ret = "<ul>";
                    for (let p of data){
                        ret+="<li>"+p.qtte+" "+p.pizza+ (p.size? ' 33cm' : ' 24cm')+"</li>"
                    }
                    return ret;
                },
                bSortable: false
            },
            {
                targets:6,
                bSortable: false
            },
           /* {
                targets:6,
                bSortable: false
            }*/
            
            
             ]
            } );
        } );   
    </script>