<div class="col-lg-12">
        <p>&nbsp;</p>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>{{title}}</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="form-group col-lg-12">
                        <strong class="form-control-static col-lg-3 user-label">Nom &amp; prénom:</strong>
                        <p class="form-control-static col-lg-8">{{user.prenom}} {{user.nom}}</p>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <strong class="form-control-static col-lg-3 user-label">login:</strong>
                        <p class="form-control-static col-lg-8">{{user.login}}</p>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <strong class="form-control-static col-lg-3 user-label">Password (DEBUG ONLY):</strong>
                        <p class="form-control-static col-lg-8">{{user.passwrd}}</p>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <strong class="form-control-static col-lg-3 user-label">téléphone:</strong>
                        <p class="form-control-static col-lg-8">{{user.tel}}</p>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <strong class="form-control-static col-lg-3 user-label">Adresse mail:</strong>
                        <p class="form-control-static col-lg-8">{{user.mail}}</p>
                    </div>

                </div>
                <div class="row">
                    <div class="panel panel-default inner-panel">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="products">
                                <!-- /.table-responsive -->
                            <div class="well">
                                <h3>Commandes</h3>
                                <p>Liste des commandes passées par ce client</p>
                            </div>
                                <thead>
                                    <tr>
                                        <th>Date commande</th>
                                        <th>Date Retrait</th>
                                        <th>Id Paiement</th>
                                        <th>Pizzas</th>
                                        <th>message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each user.commandes}}
                                    <tr class="odd gradeX">
                                        <td><a href="/admin/commanddetails/{{id}}" title="Cliquez pour voir les details de cette commande">
                                        {{#formatDate date_cmd "HH:mm:ss DD-MM-YYYY"}}{{this}}{{/formatDate}}</a></td>
                                        <td>{{#formatDate date_retrait "HH:mm:ss DD-MM-YYYY"}}{{this}}{{/formatDate}}</td>
                                        <td><a href="/admin/payements/{{payement_id}}" title="Voir les details du payement">{{payement_id}}</a></td>
                                        <td>
                                            <ul>
                                            {{#each pizzas}}
                                               <li> {{qtte}} * {{pizza}} {{#ifEq size true}}33cm{{else}}24cm{{/ifEq}}</li>
                                            {{/each}}
                                            </ul>
                                        </td>
                                        <td>{{message}}</td>
                                    </tr>
                                    {{/each}}
                                    
                                </tbody>
                            </table>
                    </div>
                </div>
                <div class="row">
                    <div class="panel panel-default inner-panel">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="comments">
                                <!-- /.table-responsive -->
                            <div class="well">
                                <h3>Commentaires</h3>
                                <p>Les commentaires et reactions de ce client</p>
                            </div>
                                <thead>
                                    <tr>
                                        <th>date</th>
                                        <th>texte</th>
                                        <th>etat</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each user.comments}}
                                    <tr class="odd gradeX">
                                        <td>{{#formatDate date "HH:mm:ss DD-MM-YYYY"}}{{this}}{{/formatDate}}</td>
                                        <td>{{texte}}</td>
                                        <td class="center"><label>
                                            <input type="checkbox" data-toggle="toggle" {{#ifEq etat true}}checked="true"{{/ifEq}}>
                                        </label></td>
                                    </tr>
                                    {{/each}}
                                    
                                </tbody>
                            </table>
                    </div>
                </div>
                

            </div>
        </div>
</div>
<script>
    $(document).ready(function() {
        $('table').each( (i,elem)=>{
                $(elem).DataTable({
                "filter": true,
                "pagingType": "simple_numbers",
                "orderClasses": false,
                "order": [[0, "asc"]],
                "info": false,
                responsive: true
            });
        });
    });
    </script>